---
import Layout from "../../layouts/Layout.astro";
import CameraTool from "../../components/tools/CameraTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/party/camera");
---

<Layout title="Camera - Record Video and Take Photos" description={tool?.description} keywords={tool?.keywords} currentPath="/party/camera">
  <h1 slot="navbar-title">Camera</h1>
  <CameraTool client:load />
</Layout>
