---
import Layout from "../layouts/Layout.astro";
import ToolsIndex from "../components/ToolsIndex.svelte";
import { categories } from "../data/tools";

// Structured data for homepage
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  name: "Tools",
  description:
    "A collection of open-source developer tools for everyday tasks - encoders, decoders, generators, converters, and more.",
  url: "https://1.tools",
  applicationCategory: "DeveloperApplication",
  operatingSystem: "Web Browser",
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD",
  },
  creator: {
    "@type": "Organization",
    name: "Tools",
  },
  featureList: categories
    .flatMap((cat) =>
      cat.tools.map((tool) => `${tool.name}: ${tool.description}`),
    )
    .join("; "),
};
---

<Layout
  title=""
  description="A collection of open-source developer tools for everyday tasks - encoders, decoders, generators, converters, and more."
  currentPath="/"
>
  <!-- Structured Data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify(structuredData)}
  />

  <ToolsIndex client:load />
</Layout>
