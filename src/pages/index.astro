---
import Layout from "../layouts/Layout.astro";
import { categories } from "../data/tools";
---

<Layout title="Home" currentPath="/">
  <div>
    <header class="mb-12">
      <h1 class="text-2xl font-medium text-(--color-text) mb-2">
        Tools
      </h1>
      <p class="text-(--color-text-muted) text-sm">
        A collection of useful tools for everyday tasks.
      </p>
    </header>

    {
      categories.map((category) => (
        <section class="mb-10">
          <h2 class="text-xs uppercase tracking-wider text-(--color-text-light) mb-4 font-medium">
            {category.name}
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            {category.tools.map((tool) => (
              <a
                href={tool.path}
                class="group block p-4 bg-(--color-bg-alt) border border-(--color-border) hover:border-(--color-text-light) transition-colors"
              >
                <div class="flex items-center gap-3">
                  <span class="text-lg">{tool.icon}</span>
                  <div>
                    <h3 class="text-sm font-medium text-(--color-text) group-hover:text-(--color-text-muted) transition-colors">
                      {tool.name}
                    </h3>
                    <p class="text-xs text-(--color-text-light) mt-0.5">
                      {tool.description}
                    </p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      ))
    }

    {
      categories.length === 0 && (
        <div class="text-center py-12 text-(--color-text-light)">
          <p>No tools available yet.</p>
        </div>
      )
    }
  </div>
</Layout>
