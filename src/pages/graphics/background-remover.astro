---
import Layout from "../../layouts/Layout.astro";
import BackgroundRemoverTool from "../../components/tools/BackgroundRemoverTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/graphics/background-remover");
---

<Layout
    title="Background Remover"
    description={tool?.description}
    keywords={tool?.keywords}
    currentPath="/graphics/background-remover"
>
    <h1 slot="navbar-title">Background Remover</h1>
    <BackgroundRemoverTool client:load />
</Layout>
