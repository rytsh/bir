---
import Layout from "../../layouts/Layout.astro";
import ImageBase64Tool from "../../components/tools/ImageBase64Tool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/graphics/image-base64");
---

<Layout title="Image to Base64 Converter" description={tool?.description} keywords={tool?.keywords} currentPath="/graphics/image-base64">
  <h1 slot="navbar-title">Image to Base64</h1>
  <ImageBase64Tool client:load />
</Layout>
