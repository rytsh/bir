---
import Layout from "../../layouts/Layout.astro";
import FaviconGeneratorTool from "../../components/tools/FaviconGeneratorTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/graphics/favicon");
---

<Layout title="Favicon Generator" description={tool?.description} keywords={tool?.keywords} currentPath="/graphics/favicon">
  <h1 slot="navbar-title">Favicon Generator</h1>
  <FaviconGeneratorTool client:load />
</Layout>
