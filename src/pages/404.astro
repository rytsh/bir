---
import Layout from "../layouts/Layout.astro";
import Glitch404 from "../components/Glitch404.svelte";
---

<Layout title="404 - Page Not Found" currentPath="/404">
  <h1 slot="navbar-title">404 - Page Not Found</h1>
  <div class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4">
    <Glitch404 client:load />

    <div class="mt-8 space-y-4 w-full">
      <p class="text-lg sm:text-xl text-(--color-text-muted)">
        Page not found
      </p>
      <p class="text-sm text-(--color-text-muted)">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="w-full inline-block mt-4 px-6 py-3 text-(--color-text-muted) hover:bg-(--color-bg-alt) border-(--color-text-light) border-t border-b hover:text-(--color-btn) transition-colors font-medium"
      >
        Return Home
      </a>
    </div>
  </div>
</Layout>
