---
import Layout from "../layouts/Layout.astro";
import Glitch404 from "../components/Glitch404.svelte";
---

<Layout title="404 - Page Not Found" currentPath="/404">
  <h1 slot="navbar-title">404 - Page Not Found</h1>
  <div class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4">
    <Glitch404 client:load />

    <div class="mt-8 space-y-4">
      <p class="text-lg sm:text-xl text-(--color-text-muted)">
        Page not found
      </p>
      <p class="text-sm text-(--color-text-muted) max-w-md">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-block mt-4 px-6 py-3 bg-(--color-primary) hover:bg-(--color-primary-hover) text-white rounded-lg transition-colors font-medium"
      >
        Return Home
      </a>
    </div>
  </div>
</Layout>
