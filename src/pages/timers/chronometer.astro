---
import Layout from "../../layouts/Layout.astro";
import ChronometerTool from "../../components/tools/ChronometerTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/timers/chronometer");
---

<Layout title="Chronometer - Precision Stopwatch with Lap Timer" description={tool?.description} keywords={tool?.keywords} currentPath="/timers/chronometer">
  <h1 slot="navbar-title">Chronometer</h1>
  <ChronometerTool client:load />
</Layout>
