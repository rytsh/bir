---
import Layout from "../../layouts/Layout.astro";
import OAuth2Tool from "../../components/tools/OAuth2Tool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/network/oauth2");
---

<Layout title="OAuth 2.0 Flow Explorer" description={tool?.description} keywords={tool?.keywords} currentPath="/network/oauth2">
  <h1 slot="navbar-title">OAuth 2.0 Flow Explorer</h1>
  <OAuth2Tool client:load />
</Layout>
