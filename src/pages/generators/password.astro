---
import Layout from "../../layouts/Layout.astro";
import PasswordGeneratorTool from "../../components/tools/PasswordGeneratorTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/generators/password");
---

<Layout title="Password Generator - Secure Random Passwords" description={tool?.description} keywords={tool?.keywords} currentPath="/generators/password">
  <span slot="navbar-title">Password Generator</span>
  <h1 class="sr-only">Password Generator</h1>
  <PasswordGeneratorTool client:load />
</Layout>
