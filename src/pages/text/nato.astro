---
import Layout from "../../layouts/Layout.astro";
import NatoTool from "../../components/tools/NatoTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/text/nato");
---

<Layout title="NATO Phonetic Alphabet Converter" description={tool?.description} keywords={tool?.keywords} currentPath="/text/nato">
  <h1 slot="navbar-title">NATO Phonetic Alphabet</h1>
  <NatoTool client:load />
</Layout>
