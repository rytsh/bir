---
import Layout from "../../layouts/Layout.astro";
import GlyphsTool from "../../components/tools/GlyphsTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/text/glyphs");
---

<Layout title="Font Glyphs Viewer - Unicode Character Map" description={tool?.description} keywords={tool?.keywords} currentPath="/text/glyphs">
  <span slot="navbar-title">Font Glyphs Viewer</span>
  <h1 class="sr-only">Font Glyphs Viewer</h1>
  <GlyphsTool client:load />
</Layout>
