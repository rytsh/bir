---
import Layout from "../../layouts/Layout.astro";
import EmojiTool from "../../components/tools/EmojiTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/text/emoji");
---

<Layout title="Emoji Picker" description={tool?.description} keywords={tool?.keywords} currentPath="/text/emoji">
  <h1 slot="navbar-title">Emoji Picker</h1>
  <EmojiTool client:load />
</Layout>
