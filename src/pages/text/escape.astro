---
import Layout from "../../layouts/Layout.astro";
import TextEscapeTool from "../../components/tools/TextEscapeTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/text/escape");
---

<Layout title="Text Escape Tool - JSON, HTML, URL, Regex, Shell" description={tool?.description} keywords={tool?.keywords} currentPath="/text/escape">
  <h1 class="sr-only">Text Escape Tool</h1>
  <TextEscapeTool client:load />
</Layout>
