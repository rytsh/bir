---
import Layout from "../../layouts/Layout.astro";
import AsciiTool from "../../components/tools/AsciiTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/text/ascii");
---

<Layout title="ASCII Table - Character Reference" description={tool?.description} keywords={tool?.keywords} currentPath="/text/ascii">
  <h1 slot="navbar-title">ASCII Table</h1>
  <AsciiTool client:load />
</Layout>
