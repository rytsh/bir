---
import Layout from "../../layouts/Layout.astro";
import UrlEncoderTool from "../../components/tools/UrlEncoderTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/codecs/url");
---

<Layout navbarTitle="URL Encoder & Decoder" title="URL Encoder & Decoder - Percent Encoding Tool" description={tool?.description} keywords={tool?.keywords} currentPath="/codecs/url">
  <h1 class="sr-only">URL Encoder & Decoder</h1>
  <UrlEncoderTool client:load />
</Layout>
