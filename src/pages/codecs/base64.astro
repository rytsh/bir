---
import Layout from "../../layouts/Layout.astro";
import Base64Tool from "../../components/tools/Base64Tool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/codecs/base64");
---

<Layout title="Base64 Encoder & Decoder - Online Base64 Tool" description={tool?.description} keywords={tool?.keywords} currentPath="/codecs/base64">
