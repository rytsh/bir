---
import Layout from "../../layouts/Layout.astro";
import MorseTool from "../../components/tools/MorseTool.svelte";
import { getToolByPath } from "../../data/tools";

const tool = getToolByPath("/codecs/morse");
---

<Layout title="Morse Code Encoder & Decoder - Online Morse Tool" description={tool?.description} keywords={tool?.keywords} currentPath="/codecs/morse">
  <h1 slot="navbar-title">Morse Code Encoder & Decoder</h1>
  <MorseTool client:load />
</Layout>
