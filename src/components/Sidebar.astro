---
import { categories } from "../data/tools";
import ThemeToggle from "./ThemeToggle.svelte";

interface Props {
  currentPath?: string;
}

const { currentPath = "" } = Astro.props;
const version = import.meta.env.PUBLIC_VERSION || "development";
---

<aside
  class="w-64 lg:w-56 bg-(--color-sidebar) text-white/80 h-full flex flex-col font-mono text-sm"
>
  <div class="px-4 border-b border-white/10 hidden lg:flex items-center justify-between">
    <a
      href="/"
      class="flex items-center gap-2 text-white hover:text-white/70 transition-colors"
    >
      <span class="text-base font-medium tracking-tight">Tools</span>
    </a>
    <ThemeToggle client:load />
  </div>

  <nav class="flex-1 py-2 px-4 overflow-y-auto">
    {
      categories.map((category) => (
        <div class="mb-2">
          <h3 class="text-[11px] text-white/40 uppercase tracking-wider">
            {category.name}
          </h3>
          <ul class="space-y-0.5">
            {category.tools.map((tool) => (
              <li>
                <a
                  href={tool.path}
                  class:list={[
                    "flex items-center gap-3 px-3 py-2.5 lg:px-2 lg:py-1.5 text-sm lg:text-[13px] transition-colors",
                    currentPath === tool.path
                      ? "text-white bg-white/10"
                      : "text-white/60 hover:text-white hover:bg-white/5",
                  ]}
                >
                  <span class="w-5 lg:w-4 text-center text-base lg:text-xs">{tool.icon}</span>
                  <span>{tool.name}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </nav>

  <div class="px-4 py-1 border-t border-white/10 text-[11px] text-white/30 flex items-center justify-between">
    <span>{version}</span>
    <a
      href="https://github.com/rytsh/bir/"
      target="_blank"
      rel="noopener noreferrer"
      class="hover:text-white/50 transition-colors"
      aria-label="GitHub repository"
    >
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
      </svg>
    </a>
  </div>
</aside>
